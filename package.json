{
  "name": "@treesoft/vue3-hook-form",
  "version": "0.4.1",
  "description": "Easy way to handle submit and validate form. No state, No two way binding or v-model in the component, just give the attribute name on the input elements. Vue 3 hook form is simpler and faster.",
  "author": "TreeSoft",
  "license": "MIT",
  "homepage": "https://github.com/apichaikub/vue3-hook-form/blob/master/README.md",
  "repository": "https://github.com/apichaikub/vue3-hook-form",
  "main": "./dist/hook-form.common.js",
  "files": [
    "dist/*",
    "src/use/eform.js",
    "src/index.js",
    "package.json"
  ],
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build --target lib --name hook-form src/index.js && rm ./dist/demo.html",
    "public": "npm publish --access public"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^3.0.0-0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0-0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "keywords": [
    "vue",
    "vue3",
    "hook-form",
    "vue3-hook-form"
  ]
}
